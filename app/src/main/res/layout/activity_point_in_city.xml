<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelperClasses.HomeAdapter.PointInCity"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:background="#FAF8EC"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_point1"
            android:layout_width="195dp"
            android:layout_height="144dp"
            android:layout_marginTop="20dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginTop="20dp"
            android:background="#FAF8EC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/point1"
                android:layout_width="216dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Image Name"

                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btn_des1"
                android:layout_width="209dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:background="#00000000"
                android:backgroundTint="@color/home_bakground"
                android:drawableEnd="@drawable/next_btn"
                android:drawableRight="@drawable/next_btn"
                android:paddingBottom="30dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="163dp"
        android:layout_marginTop="20dp"
        android:background="#FAF8EC"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="182dp"
            android:layout_height="163dp"
            android:layout_marginTop="20dp"
            android:background="#FAF8EC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/point2"
                android:layout_width="191dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:text="Image Name"

                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btn_des2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:background="#00000000"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/home_bakground"
                android:drawableLeft="@drawable/general_back_icon"
                android:paddingBottom="30dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

            <ImageView
                android:id="@+id/img_point2"
                android:layout_width="234dp"
                android:layout_height="144dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="155dp"
        android:layout_marginTop="20dp"
        android:background="#FAF8EC"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_point3"
            android:layout_width="210dp"
            android:layout_height="144dp"
            android:layout_marginTop="20dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="163dp"
                android:layout_marginTop="20dp"
                android:background="#FAF8EC"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/point3"
                    android:layout_width="191dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:text="Image Name"

                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <Button
                    android:id="@+id/btn_des3"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:background="#00000000"
                    android:backgroundTint="@color/home_bakground"
                    android:drawableEnd="@drawable/next_btn"
                    android:drawableRight="@drawable/next_btn"
                    android:paddingBottom="30dp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:background="#FAF8EC"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="163dp"
            android:layout_marginTop="20dp"
            android:background="#FAF8EC"
            android:orientation="vertical">

            <TextView
                android:id="@+id/point4"
                android:layout_width="191dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Image Name"

                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/btn_des4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="right"
                android:background="#00000000"
                android:backgroundTint="@color/home_bakground"
                android:drawableLeft="@drawable/general_back_icon"
                android:paddingBottom="30dp"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_point4"
            android:layout_width="219dp"
            android:layout_height="144dp"
            android:layout_marginTop="20dp" />



    </LinearLayout>






    </LinearLayout>

    </ScrollView>